{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    [
      "babel-plugin-root-import",
      {
        "paths": [
          {
            "rootPathPrefix": "@components",
            "rootPathSuffix": "src/components"
          },
          {
            "rootPathPrefix": "@controllers",
            "rootPathSuffix": "src/controllers"
          }
        ]
      }
    ]
  ]
}